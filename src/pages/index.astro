  <Hero
    id = 'Home'
    image={{ src: '~/assets/images/amazonriver.jpg', alt: 'Rio Amazonas' }}
    actions={[
      {
        variant: 'primary',
        text: 'Toda tu ayuda suma',
        href: '#',
        target: '_blank',
        icon: 'tabler:heart-handshake',
      },
      { text: 'Conocenos más', href: '#Proyect' },
    ]}

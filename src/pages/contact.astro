---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Contactanos!" />

  <ContactUs
    title="Tu mensaje puede ser de mucha bendicion."
    subtitle="Para obtener respuestas más rápidas, explore nuestra sección de preguntas frecuentes. Si no, rellene los campos siguientes y nos pondremos en contacto muy pronto!!."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, usted reconoce y acepta la recopilación de su información personal.',
    }}
    description="Te responderemos lo antes posible!"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos aca para ayudarte!"
    items={[
      {
        title: 'Preguntas Generales',
        description: `Chatea con nosotros para consultas relacionadas con la mision y nuestro accionar allá.`,
      },
      {
        title: 'Nuestro E-mail de contacto',
        description:
          'Contactanos a traves de nuestro mail para poder responderte todas tus dudas.',
      },
      {
        title: 'Donde encontrarnos',
        description:
          'Somos jovenes que se congregan en la iglesia de hermanos libre de Saravia.',
      },
      {
        title: 'Telefono',
        description: '+54 3512014013',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Saravia 462, Córdoba, Argentina.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
